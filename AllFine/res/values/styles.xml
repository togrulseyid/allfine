    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AllFineCustomActionBar</item>
        <item name="actionBarStyle">@style/AllFineCustomActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- ActionBar styles -->
    <style name="AllFineCustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/color_background_actoinbar</item>
        <item name="android:titleTextStyle">@style/AllFineCustomActionBarTitleText</item>
        <item name="titleTextStyle">@style/AllFineCustomActionBarTitleText</item>
        <item name="background">@color/color_background_actoinbar</item>
        <item name="android:icon">@drawable/ic_actionbar_home</item>
        <item name="icon">@drawable/ic_actionbar_home</item>
    </style>

    <style name="AllFineCustomActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Buttons styles -->
    <style name="AllFine.Button.Style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">@dimen/manads_button_style_text_size</item>
        <item name="android:padding">@dimen/manads_button_style_paddings</item>
    </style>

    <style name="AllFine.Button.Style.White" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_selector_white</item>
        <item name="android:textSize">@dimen/manads_button_style_text_size</item>
        <item name="android:padding">@dimen/manads_button_style_paddings</item>
    </style>

    <!--  -->

    <style name="AllFine.Button.EmptyList.Style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_disabled_button_background</item>
        <item name="android:background">@color/color_background_seperator</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- ZIBILLIK -->
    <style name="AllFine.EmptyList.TextView.Style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_disabled_button_background</item>
        <item name="android:background">@color/color_background_seperator</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

