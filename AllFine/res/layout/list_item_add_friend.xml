<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageViewAddFriendActivityBaseAdapterUserPhoto"
        android:layout_width="@dimen/default_menu_item_dimen"
        android:layout_height="@dimen/default_menu_item_dimen"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_imran" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/circularImageViewAddFriendActivityBaseAdapterUserPhoto"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewAddFriendActivityBaseAdapterUserFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewAddFriendActivityBaseAdapterUserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</RelativeLayout>